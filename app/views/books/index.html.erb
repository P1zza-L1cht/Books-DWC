<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', "/books/#{book.id}" %></td>
      <td><%= link_to 'Edit', "/books/#{book.id}/edit" %></td>
      <td><%= link_to 'destroy',book_path(book), method: :delete %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<h2>New book</h2>
<% if @book.errors.any? %>
  <div class="error">
    <h2 class="message"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

<%= form_with model:@book, url:'/books', local:true do |f| %>

  <div class="field">
  <h4>title</h4>
  <%= f.text_field :title %>
  </div>

  <div class="field">
  <h4>body</h4>
  <%= f.text_area :body %>
  </div>

  <div class="actions">
  <%= f.submit 'Create Book' %>
  </div>

<% end %>