<h1>Editing Book</h1>
 <% if @book.errors.any? %>
  <div class="error">
    <h2 class="message"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

<%= form_with model: @book, url:book_path(@book), local:true do |f| %>

  <div class="field">
  <h4>Title</h4>
  <%= f.text_field :title %>
  </div>
  <div class="field">
  <h4>Body</h4>
  <%= f.text_area :body %>
  </div>

  <div class="actions">
  <%= f.submit 'Update Book' %>
  </div>

<% end %>

